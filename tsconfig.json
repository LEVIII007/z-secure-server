{
  "compilerOptions": {
    "target": "ES2022",                 // JavaScript version
    "module": "ESNext",                 // Use ES Modules
    "rootDir": "./src",                 // Source files location
    "outDir": "./dist",                 // Compiled files output directory
    "strict": true,                     // Enable strict mode            // Skip type checking of libraries
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],                   // Include the 'src' folder
  "exclude": ["node_modules", "dist"]   // Exclude folders
}
